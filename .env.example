# ========================================
# AI Social Bot - Configurazione
# ========================================

# API Keys - Ottieni qui: console.groq.com (GRATIS!)
GROQ_API_KEY=your_groq_key_here

# Bluesky Account - Il tuo account Bluesky
BLUESKY_USERNAME=yourusername.bsky.social
BLUESKY_PASSWORD=your_app_password_here

# Reddit API (opzionale per trending) - Crea su reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_secret

# Cloudflare for AI Image Generation (Optional - FREE!)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# === SOCIAL PLATFORMS (Enable/Disable) ===
ENABLE_BLUESKY=true
ENABLE_LINKEDIN=false
ENABLE_MASTODON=false

# LinkedIn (Optional - for professional network)
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token
LINKEDIN_USER_ID=your_linkedin_user_id

# Mastodon (Optional - federated network)
MASTODON_INSTANCE_URL=https://mastodon.social
MASTODON_ACCESS_TOKEN=your_mastodon_access_token
